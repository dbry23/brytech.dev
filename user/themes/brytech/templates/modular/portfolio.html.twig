{% set cloudinary_url = "//res.cloudinary.com/brytech/image/upload/f_auto,q_auto/" %}

<section id="portfolio">
    <div class="row">
        <div class="twelve columns collapsed">
            {{ page.content }}
            <div id="portfolio-wrapper" class="bgrid-thirds s-bgrid-thirds cf">
                {% for item in page.header.portfolio %}
                <div class="columns portfolio-item">
                    <div class="item-wrap">
                        <a href="#modal-{{ loop.index }}" title="">
                            {% set imgUrl = page.media[item.img_low].url ? page.media[item.img_low].url : page.media[item.img].url %}
                            {% if imgUrl starts with "/brytech.dev/user" %}
                                {% set imgUrl = imgUrl|replace({"/brytech.dev/user": cloudinary_url ~ "brytech_dev"}) %}
                            {% elseif imgUrl starts with "/user" %}
                                {% set imgUrl = imgUrl|replace({"/user": cloudinary_url ~ "brytech_dev"}) %}
                            {% endif %}
                            <img data-src="{{ imgUrl }}" alt="{{ item.title }}" class="lazy" />
                            <div class="overlay">
                                <div class="portfolio-item-meta">
                                    <h5>{{ item.title }}</h5>
                                    <p>{{ item.description }}</p>
                                </div>
                            </div>
                            <div class="link-icon"><i class="icon-plus"></i></div>
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% for item in page.header.portfolio %}
        <div id="modal-{{ loop.index }}" class="popup-modal mfp-hide">
            {% set imgUrl = page.media[item.img].url %}
            {% if imgUrl starts with "/brytech.dev/user" %}
                {% set imgUrl = imgUrl|replace({"/brytech.dev/user": cloudinary_url ~ "brytech_dev"}) %}
            {% elseif imgUrl starts with "/user" %}
                {% set imgUrl = imgUrl|replace({"/user": cloudinary_url ~ "brytech_dev"}) %}
            {% endif %}
            <img class="scale-with-grid lazy" data-src="{{ imgUrl }}" />
            <div class="description-box">
                <h4>{{ item.title }}</h4>
                <p>{{ item.content }}.</p>
                <span class="categories"><i class="fa fa-tag"></i>{{ item.tags }}</span>
            </div>
            <div class="link-box">
                <a href="{{ item.link }}" target="_blank">Link</a>
                <a class="popup-modal-dismiss">Close</a>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
